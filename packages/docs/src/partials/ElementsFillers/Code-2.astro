---
import { Code } from "astro/components";
import GridCode from "../../components/GridCode.astro";
---

<h3>Example 2: Styled Fillers</h3>
<script>
	import BentoGrid from "@bentogrid/core";
	new BentoGrid({
		cellGap: 6,
		target: "#bentogrid-elements-fillers-2",
		columns: 8,
		aspectRatio: 1,
	});
</script>

<GridCode
	id='bentogrid-elements-fillers-2'
	code={`#bentogrid > * {
  @apply bg-sand-200;
}
#bentogrid .bento-filler {
  @apply bg-black;
}`}
	lang='css'
>
	<div data-bento='2x2'></div>
	<div data-bento='1x1'></div>
	<div data-bento='2x3'></div>
	<div data-bento='2x1'></div>
	<div data-bento='3x3'></div>
	<div data-bento='1x4'></div>
	<div data-bento='2x2'></div>
</GridCode>
